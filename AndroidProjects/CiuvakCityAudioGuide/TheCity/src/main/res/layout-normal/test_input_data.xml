<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/routing_semi_transparent_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/map_zoom_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Zoom Level"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/map_zoom_level_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/radius_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Radius for update pois (meters)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/radius_update_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/alert_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Alert distance to POI (meters)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/alert_distance_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO Ciuvak!"
        android:id="@+id/button"
        android:onClick="goCiuvak"
        android:layout_marginTop="50dp"
        android:layout_gravity="right" />

</LinearLayout>